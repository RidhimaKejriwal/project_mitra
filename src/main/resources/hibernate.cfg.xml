<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/projectmitra</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        
        <mapping class="com.learn.projectmitra.entities.College"/>
        <mapping class="com.learn.projectmitra.entities.Student"/>
        <mapping class="com.learn.projectmitra.entities.Project"/>
        <mapping class="com.learn.projectmitra.entities.Follow"/>
        <mapping class="com.learn.projectmitra.entities.Files"/>
        <mapping class="com.learn.projectmitra.entities.LikebyStudent"/>
        <mapping class="com.learn.projectmitra.entities.LikebyCollege"/>
        
    </session-factory>
</hibernate-configuration>


