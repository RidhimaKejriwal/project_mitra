<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
   version="4.0">
    <servlet>
        <servlet-name>VerifyCollegeServlet</servlet-name>
        <servlet-class>com.learn.projectmitra.servlets.VerifyCollegeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyStudentServlet</servlet-name>
        <servlet-class>com.learn.projectmitra.servlets.VerifyStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyCode</servlet-name>
        <servlet-class>com.learn.projectmitra.servlets.VerifyCode</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyCollegeServlet</servlet-name>
        <url-pattern>/VerifyCollegeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyStudentServlet</servlet-name>
        <url-pattern>/VerifyStudentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyCode</servlet-name>
        <url-pattern>/VerifyCode</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
